@model CreateVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create form</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="title">Enter your title</label>
                        <input type="text" class="form-control" asp-for="title" placeholder="Title">
                        <span class="text-danger" style="color:red;" asp-validation-for="title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="price">Enter your price</label>
                        <input class="form-control" asp-for="price" placeholder="Price">
                        <span class="text-danger" style="color:red;" asp-validation-for="price"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="rating">Enter your rating</label>
                        <input asp-for="rating" class="form-control" placeholder="Rating">
                        <span class="text-danger" style="color:red;" asp-validation-for="rating"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="imageFile">Insert your image</label>
                        <input type="file" asp-for="imageFile" class="form-control" placeholder="Image">
                        <span class="text-danger" style="color:red;" asp-validation-for="imageFile"></span>
                    </div>


                    <button type="submit" class="btn btn-primary me-2" asp-action="Create" asp-controller="Tour">Submit</button>
                    <a class="btn btn-light" asp-action="Index" asp-controller="Dashboard">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
